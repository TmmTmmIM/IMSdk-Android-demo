<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/root"
    android:orientation="vertical"
    android:background="@color/color_EFF0F3"
    android:gravity="center_vertical"
    android:layout_height="30dp">

    <View
        android:id="@+id/topLineView"
        app:layout_constraintTop_toTopOf="parent"
        tools:background="@color/color_red"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_height="0.5dp"
        style="@style/DividerView_0_5_no_margin" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/decorationText"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@+id/topLineView"
        app:layout_constraintBottom_toTopOf="@+id/bottomLineView"
        android:gravity="center_vertical"
        android:paddingHorizontal="16dp"
        android:textColor="@color/text_A2A8C3"
        android:textSize="16sp"
        tools:text="A" />

    <View
        android:id="@+id/bottomLineView"
        tools:background="@color/color_red"
        android:layout_height="0.5dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        style="@style/DividerView_0_5_no_margin" />
</androidx.constraintlayout.widget.ConstraintLayout>