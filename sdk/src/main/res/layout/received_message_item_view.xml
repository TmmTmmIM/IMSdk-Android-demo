    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/messageContainerView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="60dp"
        android:longClickable="true"
        app:layout_constrainedWidth="true"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/stubAvatar"
        app:layout_constraintTop_toBottomOf="@+id/stubName"
        app:layout_constraintTop_toTopOf="parent"
        >

        <ViewStub
            android:id="@+id/stubQuoteMessage"
            android:inflatedId="@+id/layoutQuoteMessage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout="@layout/layout_message_item_quote"
            android:layout_marginStart="12dp"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="12dp"
            app:layout_constrainedWidth="true"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            />

        <com.tmmtmm.sdk.ui.view.link.textview.MessageTextLinkView
            android:id="@+id/message_text_content_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center|start"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="12dp"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:textColor="@color/white"
            android:textSize="15sp"
            app:layout_constrainedWidth="true"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/stubQuoteMessage"
            app:qmui_linkBackgroundColor="@color/transparent"
            app:qmui_linkTextColor="@color/text_00C6DB"
            tools:text="暗淡但大家大家大"
            tools:textColor="@color/black"
            tools:textColorLink="@color/black"
            />


        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/messageTimeTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="4dp"
            android:layout_marginBottom="4dp"
            android:includeFontPadding="false"
            android:textColor="@color/text_A2A8C3"
            android:textSize="12sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/messageStatusImg"
            app:layout_goneMarginEnd="12dp"
            tools:text="15:32"
            />

        <com.tmmtmm.sdk.ui.view.message.MessageSendingView
            android:id="@+id/messageStatusImg"
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:layout_marginEnd="12dp"
            android:layout_marginBottom="1dp"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="@+id/messageTimeTv"
            app:layout_constraintEnd_toEndOf="parent"
            tools:src="@drawable/ic_conversation_message_received"
            tools:visibility="visible"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>


    <ViewStub
        android:id="@+id/stubCover"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:inflatedId="@+id/cover"
        android:layout="@layout/layout_receive_message_item_check_cover"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/stubCheckBox"
        app:layout_constraintTop_toTopOf="@id/stubAvatar"
        />
