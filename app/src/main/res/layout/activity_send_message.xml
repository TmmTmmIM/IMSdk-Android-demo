<?xml version="1.0" encoding="utf-8"?>
<org.client.core.ui.layout.StateToolBarLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/root_view_linearlayout"
    app:ctb_toolBarBackground="@color/white"
    android:background="@color/white"
    android:orientation="vertical"
    >

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/etMessageContent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="17dp"
        android:layout_marginEnd="17dp"
        android:minHeight="100dp"
        android:hint="输入内容"
        android:gravity="start|top"
        android:background="@color/text_search"
        android:padding="10dp"
        />

    <com.allen.library.shape.ShapeButton
        android:id="@+id/btnSendTextMessage"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginStart="50dp"
        android:layout_marginEnd="50dp"
        app:shapeSolidColor="@color/text_0091FF"
        app:shapeCornersRadius="10dp"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:gravity="center"
        android:layout_marginTop="30dp"
        android:text="发送文本消息"
        />

    <com.allen.library.shape.ShapeButton
        android:id="@+id/btnSendImageMessage"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginStart="50dp"
        android:layout_marginEnd="50dp"
        app:shapeSolidColor="@color/text_0091FF"
        app:shapeCornersRadius="10dp"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:gravity="center"
        android:text="发送图片"
        android:layout_marginTop="67dp"
        />

    <com.allen.library.shape.ShapeButton
        android:id="@+id/btnSendFileMessage"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginStart="50dp"
        android:layout_marginEnd="50dp"
        app:shapeSolidColor="@color/text_0091FF"
        app:shapeCornersRadius="10dp"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:gravity="center"
        android:text="发送文件"
        android:layout_marginTop="15dp"
        />
</org.client.core.ui.layout.StateToolBarLinearLayout>