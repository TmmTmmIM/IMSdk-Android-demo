<?xml version="1.0" encoding="utf-8"?>
<org.client.core.ui.layout.StateToolBarConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/root_view_constraint"
    app:ctb_toolBarBackground="@color/white"
    android:background="@color/white"
    >

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        app:layout_constraintTop_toBottomOf="@+id/ctb_all_toolbar"
        app:layout_constraintStart_toStartOf="parent"
        android:background="#99d8d8d8"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvLoginTips"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/ctb_all_toolbar"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="210dp"
        android:layout_marginStart="42dp"
        android:textColor="#333333"
        android:textSize="16sp"
        android:text="手机号码"/>

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/etPhone"
        android:layout_width="0dp"
        android:layout_height="44dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvLoginTips"
        android:background="@drawable/login_edit_view_bg"
        android:layout_marginStart="44dp"
        android:layout_marginEnd="44dp"
        android:layout_marginTop="22dp"
        android:inputType="number"
        android:maxLength="20"
        android:textColor="#333333"
        android:textSize="26sp"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnLogin"
        android:layout_width="230dp"
        android:layout_height="44dp"
        app:layout_constraintTop_toBottomOf="@id/etPhone"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="90dp"
        android:background="@drawable/login_btn_bg"
        android:textSize="20sp"
        android:textColor="@color/white"
        android:gravity="center"
        android:text="登录"/>

</org.client.core.ui.layout.StateToolBarConstraintLayout>